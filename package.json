{
  "name": "github-metadata",
  "description": "Gather GitHub metadata about a repository.",
  "version": "0.1.0",
  "homepage": "https://github.com/doowb/github-metadata",
  "author": "Brian Woodward (https://doowb.com)",
  "repository": "doowb/github-metadata",
  "bugs": {
    "url": "https://github.com/doowb/github-metadata/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "extend-shallow": "^2.0.1",
    "get-value": "^2.0.6",
    "github-base": "^0.5.4",
    "koalas": "^1.0.2",
    "set-value": "^1.0.0"
  },
  "keywords": [
    "api",
    "assemble",
    "github",
    "github-metadata",
    "github-base",
    "github-api",
    "jekyll",
    "metadata"
  ],
  "devDependencies": {
    "bot-github-auth": "^0.1.0",
    "gulp-format-md": "^0.1.12"
  },
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "github-base",
        "assemble"
      ]
    },
    "lint": {
      "reflinks": true
    }
  }
